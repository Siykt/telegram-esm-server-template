{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "lib": ["es2022"],
    "noPropertyAccessFromIndexSignature": false,
    "isolatedModules": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "types": ["./src/@types/global.d.ts"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
